<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>IPS Viewer</title>
    <style>
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background: #f5f5f5;
            padding: 40px;
        }
        .container {
            max-width: 720px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 8px;
            padding: 24px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        }
        h1 {
            font-size: 22px;
            margin-bottom: 16px;
        }
        .layout {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: 24px;
            align-items: flex-start;
        }
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
        }
        input[type="text"] {
            width: 100%;
            padding: 8px 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 14px;
            box-sizing: border-box;
        }
        button {
            margin-top: 16px;
            padding: 8px 16px;
            background: #2563eb;
            color: #fff;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }
        button:hover {
            background: #1d4ed8;
        }
        .hint {
            margin-top: 8px;
            font-size: 12px;
            color: #666;
        }
        select {
            width: 100%;
            height: 240px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 13px;
            padding: 4px;
            box-sizing: border-box;
        }
        .listbox-label {
            margin-bottom: 4px;
            font-weight: 600;
        }
        .listbox-hint {
            font-size: 11px;
            color: #666;
            margin-top: 4px;
        }
        code {
            font-size: 11px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Rust powered IPS Viewer</h1>
    <div class="layout">
        <!-- Left: form -->
        <div>
            <form action="/ipsview" method="get" id="uuid-form">
                <label for="uuid">Package UUID</label>
                <input id="uuid" name="uuid" type="text" placeholder="Paste or select a package UUID" required>
                <button type="submit">View IPS</button>
            </form>
            <p class="hint">
                Paste a known <code>packageUUID</code> or pick one from the list on the right.
            </p>
        </div>

        <!-- Right: list of existing packageUUIDs -->
        <div>
            <div class="listbox-label">Recent IPS packages</div>
            <select id="uuid-list" size="10">
                {% for p in packages %}
                    <option value="{{ p.package_uuid }}">
                        {{ p.time_stamp }} – {{ p.patient_name }} {{ p.patient_given }} – {{ p.package_uuid }}
                    </option>
                {% endfor %}
            </select>
            <div class="listbox-hint">
                Click to copy into the box on the left. Double-click to open immediately.
            </div>
        </div>
    </div>
</div>

<script>
    (function() {
        const list = document.getElementById('uuid-list');
        const input = document.getElementById('uuid');
        const form = document.getElementById('uuid-form');

        if (!list || !input) return;

        // When a row is selected, copy its UUID into the textbox
        list.addEventListener('change', function() {
            input.value = list.value;
        });

        // Double-click on a row submits the form immediately
        list.addEventListener('dblclick', function() {
            input.value = list.value;
            if (form) {
                form.submit();
            }
        });
    })();
</script>
</body>
</html>
